{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2022",
    "lib": ["es2020", "dom"],
    "jsx": "preserve",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": false,
    "allowJs": false,
    "types": ["node", "react"]
  },
  "exclude": ["**/dist", "**/node_modules"]
}
